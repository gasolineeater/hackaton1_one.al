# Staging Environment Configuration

# Server Configuration
NODE_ENV=staging
PORT=3001
ALLOWED_ORIGINS=https://staging.dashboard.onealbania.al,http://localhost:3000
FRONTEND_URL=https://staging.dashboard.onealbania.al

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=debug
LOG_MAX_SIZE=5m
LOG_MAX_FILES=14d

# MySQL Database Configuration
DB_HOST=db
DB_PORT=3306
DB_NAME=one_albania_staging_db
DB_USER=onealbania
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD
DB_POOL_MAX=10
DB_POOL_MIN=2
DB_SSL=true

# JWT Configuration
JWT_SECRET=REPLACE_WITH_SECURE_SECRET
JWT_ACCESS_EXPIRATION=30m
JWT_REFRESH_EXPIRATION=7d
JWT_RESET_EXPIRATION=1h
JWT_COOKIE_SECURE=true
JWT_COOKIE_HTTPONLY=true
JWT_COOKIE_SAMESITE=lax

# ONE Albania API Configuration
ONE_ALBANIA_API_URL=https://staging-api.one.al/v1
ONE_ALBANIA_API_KEY=REPLACE_WITH_API_KEY
ONE_ALBANIA_API_SECRET=REPLACE_WITH_API_SECRET

# Email Configuration
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=notifications@onealbania.al
EMAIL_PASSWORD=REPLACE_WITH_EMAIL_PASSWORD
EMAIL_FROM=ONE Albania Staging <notifications@onealbania.al>
EMAIL_SECURE=true

# SMS Configuration
SMS_PROVIDER=twilio
SMS_API_KEY=REPLACE_WITH_SMS_API_KEY
SMS_API_SECRET=REPLACE_WITH_SMS_API_SECRET
SMS_FROM=ONE Albania Staging

# Gemini API Configuration
GEMINI_API_KEY=REPLACE_WITH_GEMINI_API_KEY
GEMINI_MODEL=gemini-pro
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# Security Configuration
HELMET_CONTENT_SECURITY_POLICY=true
HELMET_HSTS_MAX_AGE=31536000
CORS_MAX_AGE=86400
